{
  "manifest_version": 3,
  "name": "Cyclocross Lap Time Converter",
  "version": "1.2.5",
  "description": "シクロクロス公式リザルトページの経過時間をネットラップタイムに変換します",
  "permissions": ["storage"],
  "host_permissions": [
    "https://data.cyclocross.jp/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://data.cyclocross.jp/race/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Cyclocross Lap Time Converter - クリックでON/OFF切り替え"
  }
}
